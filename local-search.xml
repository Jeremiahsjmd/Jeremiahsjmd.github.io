    <title>像个自由人一样去思考</title>
    <link href="/2024/02/19/%E5%83%8F%E4%B8%AA%E8%87%AA%E7%94%B1%E4%BA%BA%E4%B8%80%E6%A0%B7%E5%8E%BB%E6%80%9D%E8%80%83/"/>
